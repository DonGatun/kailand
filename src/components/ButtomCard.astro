---

interface Props {
    title: string;
    href: string;
    img: string;
    animation: string;
    animation_time: string;
}

const { href, title, img, animation, animation_time } = Astro.props;
---

<a
    href={href}
    target='_blank'
    class="mx-6 rounded-full bg-green-600 hover:bg-green-700 hover:-translate-x-1 hover:-translate-y-1 text-white font-bold px-4 my-3 w-1/3 h-16 flex items-center justify-center"
    data-aos={animation}
    data-aos-delay={animation_time}
    >
    <img src={img} alt="" class="w-10 h-10 text-white" style="filter: invert();">
    <h2 class="text-white inline w-full text-center text-lg">
        {title}
    </h2>
</a>

